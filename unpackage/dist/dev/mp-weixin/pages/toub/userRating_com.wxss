.issue {
  background-color: #f9f9f9;
}
.issue-head {
    background-color: #ffffff;
    height: 100rpx;
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
    padding: 0 25rpx;
}
.issue-head-pic {
      width: 70rpx;
      height: 70rpx;
      border-radius: 50%;
      vertical-align: middle;
      margin-right: 17rpx;
}
.issue-head-title {
      line-height: 100rpx;
      font-size: 30rpx;
      vertical-align: middle;
      margin-right: 35rpx;
}
.issue-head-star-box {
      display: inline-block;
}
.issue-head-star-box image {
        width: 32rpx;
        height: 32rpx;
        vertical-align: middle;
        margin-right: 14rpx;
}
.issue-head-star-box image.active {
        -webkit-animation: star_move ease-in 1 1s,star_rotate ease 1.5s infinite 1s;
                animation: star_move ease-in 1 1s,star_rotate ease 1.5s infinite 1s;
}
.issue textarea {
    width: 100%;
    height: 420rpx;
    background-color: #ffffff;
    font-size: 28rpx;
    color: #898989;
    padding: 24rpx;
    box-sizing: border-box;
    line-height: 40rpx;
}
.issue-btn-box {
    padding: 54rpx 30rpx;
}
.issue-btn-box button {
      width: 100%;
      height: 80rpx;
      border-radius: 80rpx;
      font-size: 28rpx;
      background-color: #3682FF;
      line-height: 80rpx;
}
@-webkit-keyframes star_move {
from {
    width: 50rpx;
    height: 50rpx;
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
to {
    width: 32rpx;
    height: 32rpx;
    -webkit-transform: rotate(0);
            transform: rotate(0);
}
}
@keyframes star_move {
from {
    width: 50rpx;
    height: 50rpx;
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
to {
    width: 32rpx;
    height: 32rpx;
    -webkit-transform: rotate(0);
            transform: rotate(0);
}
}
@-webkit-keyframes star_rotate {
0% {
    -webkit-transform: rotateY(360deg);
            transform: rotateY(360deg);
}
100% {
    -webkit-transform: rotateY(180deg);
            transform: rotateY(180deg);
}
}
@keyframes star_rotate {
0% {
    -webkit-transform: rotateY(360deg);
            transform: rotateY(360deg);
}
100% {
    -webkit-transform: rotateY(180deg);
            transform: rotateY(180deg);
}
}

